<Page x:Class="TaxiProgramm.pages.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaxiProgramm.pages"
      mc:Ignorable="d" 
      d:DesignHeight="419" d:DesignWidth="792"
      Title="StartPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="0.5*"/>
            <ColumnDefinition  Width="1*"/>
            <ColumnDefinition  Width="1*"/>
            <ColumnDefinition  Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Button x:Name="ClientAuthorization" Content="Я клиент" Margin="30,30,30,30" Grid.Column="1" Grid.Row="1" Background="#FF92B0FF" FontSize="14"  Click="ClientAuthorization_Click"/>
        <Button x:Name="WorkerAuthorization" Content="Я водитель" Margin="30,30,30,30" Grid.Column="2" Grid.Row="1" Background="#FF92B0FF" FontSize="14" Click="WorkerAuthorization_Click"/>
        <Label Content="Стартовая страница" Grid.Row="0" Grid.ColumnSpan="2" FontSize="20"/>
    </Grid>
</Page>
